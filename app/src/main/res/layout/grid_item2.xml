<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="120dp"
    android:background="#FFFFFF">


    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/imageViewCentral"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewCirculo"
            android:layout_toLeftOf="@+id/imageViewCirculo"
            android:layout_toStartOf="@+id/imageViewCirculo"
            app:srcCompat="@mipmap/circulo_vermelho" />

        <ImageView
            android:id="@+id/imageViewCirculo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@mipmap/ic_circule_green" />

        <TextView
            android:id="@+id/textViewTemperatura"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewCentral"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="-70.65ºC"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewApelido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewCentral"
            android:layout_centerHorizontal="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:text="SP: -70ºC"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/textViewAlarme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:text="AL: -70ºC"
            android:textSize="8dp" />

    </RelativeLayout>


</RelativeLayout>